---
import { experiences } from "../data/experiences";
import { skills } from "../data/skills";
import TechList from "../components/TechList.astro";
import Layout from "../layouts/Layout.astro";
import ExperienceList from "../components/ExperienceList.astro";
import Testimonials from "../components/Testimonials.astro";
import Profile from "../components/Profile.astro";
import Footer from "../components/Footer.astro";
import Section from "../components/Section.astro";
import Main from "../components/Main.astro";
---

<Layout>
  <head>
    <meta
      name="description"
      content="Oniel Santos - Full-Stack developer 3+ of experience with JavaScript & NodeJs. Experienced developing software in the Healthcare industry."
    />
    <meta
      name="keywords"
      content={`Oniel Santos,Oniel,${experiences
        .map((e) => `${e.title},${e.company}`)
        .join(",")},Full-Stack developer,${skills
        .map((s) => s.name)
        .join(
          ","
        )}Experienced,Healthcare,Software,Developer,Self-taught,Professional,Skills`}
    />
    <meta name="author" content="OnielSantos" />
    <meta name="og:title" content="Oniel Santos" />
    <meta
      name="og:description"
      content="Full-Stack developer 3+ of experience with JavaScript & NodeJs."
    />
    <meta name="og:image" content="/images/og.png" />
  </head>
  <body>
    <Main>
      <Section title="">
        <Profile />
      </Section>
      <Section title="">
        <TechList />
      </Section>
      <Section title="Experience" class="section">
        <ExperienceList />
      </Section>
      <Section title="Testimonials" class="section">
        <Testimonials />
      </Section>
    </Main>
    <Footer />
  </body>

  <style is:global>
    body {
      font-family:
        system-ui,
        -apple-system,
        BlinkMacSystemFont,
        "Segoe UI",
        Roboto,
        Oxygen,
        Ubuntu,
        Cantarell,
        "Open Sans",
        "Helvetica Neue",
        sans-serif;
      background-color: var(--bg);
      color: var(--color);
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
    }
  </style>
</Layout>
