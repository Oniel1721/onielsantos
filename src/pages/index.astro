---
import { experiences } from "../data/experiences";
import { skills } from "../data/skills";
import TechList from "../components/TechList.astro";
import LinkedinIcon from "../components/icons/LinkedinIcon.astro";
import GithubIcon from "../components/icons/GithubIcon.astro";
import Layout from "../layouts/Layout.astro";
import ExperienceList from "../components/ExperienceList.astro";
import Testimonial from "../components/Testimonial.astro";
---

<Layout>
  <head>
    <meta
      name="description"
      content="Oniel Santos - Full-Stack developer 3+ of experience with JavaScript & NodeJs. Experienced developing software in the Healthcare industry."
    />
    <meta
      name="keywords"
      content={`Oniel Santos,Oniel,${experiences
        .map((e) => `${e.title},${e.company}`)
        .join(",")},Full-Stack developer,${skills
        .map((s) => s.name)
        .join(
          ","
        )}Experienced,Healthcare,Software,Developer,Self-taught,Professional,Skills`}
    />
    <meta name="author" content="OnielSantos" />
    <meta name="og:title" content="Oniel Santos" />
    <meta
      name="og:description"
      content="Full-Stack developer 3+ of experience with JavaScript & NodeJs."
    />
    <meta name="og:image" content="/images/og.png" />
  </head>
  <body>
    <main>
      <header class="header">
        <div class="profile-container">
          <img class="profile" src="/images/profile.jpg" alt="Oniel Santos" />
          <div class="profile-caption">
            <h1 class="profile-name">Oniel Santos</h1>
            <h2 class="profile-position">Full-Stack Developer</h2>
            <p class="profile-bio">
              <span>+4</span> years of experience self-taught. Worked in the
              <span>Healthcare industry</span> and <span>E-commerce</span>. Love
              teaching and sharing knowledge.
            </p>

            <nav class="nav">
              <a
                href="https://www.linkedin.com/in/onielsantos/"
                target="_blank"
              >
                <LinkedinIcon />
                 LinkedIn
              </a>
              <a href="https://github.com/Oniel1721" target="_blank">
                <GithubIcon />
                 GitHub
              </a>
              <a
                style="margin-left: auto;"
                class="btn download-cv"
                href="/cv.pdf"
                target="_blank">Download CV</a
              >
            </nav>
            <p style="margin-top: 0.5rem;" class="profile-bio">
              <span
                ><a href="mailto:contact@onielsantos.com"
                  >contact@onielsantos.com</a
                ></span
              >
            </p>
          </div>
        </div>
      </header>
      <section class="section">
        <!-- <h2 class="section-title">Skills</h2> -->
        <TechList />
      </section>
      <section class="section">
        <h2 class="section-title">Experience</h2>
        <ExperienceList />
      </section>
      <section class="section">
        <h2 class="section-title">Testimonials</h2>
        <div class="testimonial-container">
          <Testimonial
            body="Oniel is a brilliant software developer who really understands how to build both people and products. His biggest strength is his ability to understand and analyze requirements and how he can connect with the rest of the team members. Even on the most difficult task, Oniel proved to be able to truly understand them and prioritize them correctly."
            name="Stacey Díaz"
            position="Software Project Manager"
          />
          <Testimonial
            body="As a student at Cincinnatus, Oniel made a lasting impression due to his technical abilities, his enthusiasm for learning and being better, and his earnest desire to help other members of our community be better as well. When he wasn't making strides towards completing the program (to which he was also very committed), he would routinely be found helping others along. Even after graduating, we have continued to rely on him for support, and I have always appreciated his eagerness to continue mentoring those students who have come after him."
            name="María Teresa Cruz Minaya"
            position="Community Team Member at Cincinnatus"
          />
          <Testimonial
            body="Oniel has extensive experience in both web and AR/VR technologies that make him a very competent developer. In general, he is a great software engineer with a great deal of knowledge in front-end and back-end development. He is constantly learning and does not stop when faced with a problem, he is conscious and persevering. It's always fun and very productive to work with."
            name="Leobardo Núñez"
            position="Software Engineer"
          />
        </div>
      </section>
    </main>
    <footer class="footer">
      <p>
        Made with{" "}
        <a href="https://astro.build/" target="_blank"> Astro</a>
         Source code on <a href="https://github.com/Oniel1721/onielsantos"
          >GitHub</a
        >
      </p>
      <p>Copy Right © {new Date().getFullYear()} Oniel Santos</p>
    </footer>
  </body>

  <style is:global>
    .testimonial-container {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }
    .testimonial {
      position: relative;
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      text-align: start;
      background-color: #00000050;
      padding: 1rem;
      border-inline-start: var(--testimonial-border);
      border-block-start: var(--testimonial-border);
    }

    .testimonial:first-child {
      border-block-start: none;
    }

    .testimonial:last-child {
      border-block-end: var(--testimonial-border);
    }

    .testimonial:nth-child(even) {
      border-inline-start: none;
      border-inline-end: var(--testimonial-border);
      border-end-end-radius: 0;
      border-start-end-radius: 0;
      border-block-start: var(--testimonial-border);
    }

    .testimonial:nth-child(even)::before {
      content: "";
      position: absolute;
      width: 100%;
      height: 1rem;
      bottom: calc(100% + 4px);
      left: 0;
      border-inline-start: var(--testimonial-border);
    }

    .testimonial:nth-child(even)::after {
      content: "";
      position: absolute;
      width: 100%;
      height: 1rem;
      top: calc(100%);
      right: -4px;
      border-inline-end: var(--testimonial-border);
    }

    .testimonial:nth-child(even):last-child {
      border-block-end: none;
    }

    .testimonial:nth-child(even):last-child::after {
      content: none;
    }

    .testimonial-body {
      color: var(--secondary);
      font-size: 0.9em;
      font-weight: 300;
      text-wrap: balance;
    }
    .testimonial-footer {
      display: flex;
      flex-direction: column;
    }

    .testimonial-cite {
      color: var(--primary);
      font-weight: 400;
      font-size: 0.9em;
    }
    .testimonial-cite span {
      opacity: 0.75;
    }
    .experience-body {
      margin-bottom: 1rem;
      font-size: 1rem;
      line-height: 1.5rem;
      color: var(--secondary);
      font-weight: 300;
    }

    .experience-body span {
      color: var(--primary);
      font-weight: 600;
    }
    .experience-title {
      font-size: 1.125rem;
      line-height: 1.75rem;
      color: var(--color);
      font-weight: 600;
      margin-bottom: 0.25rem;
      display: flex;
      align-items: center;
    }
    .experience-title span {
      font-size: 0.75rem;
      color: var(--bg);
      font-weight: 500;
      margin-inline-start: 0.5rem;
      background-color: var(--secondary);
      padding: 0 0.5rem;
      border-radius: 0.5rem;
      opacity: 0.75;
    }
    .experience-point {
      position: absolute;
      width: 0.75rem;
      height: 0.75rem;
      border-width: 1px;
      background-color: var(--secondary);
      border-radius: 50%;
      inset-inline-start: -0.375rem;
      margin-top: 0.375rem;
    }
    .experience-list {
      position: relative;
      border-inline-start-width: 1px;
      border-inline-start-style: solid;
      border-color: var(--secondary);
      list-style: none;
    }
    .experience-item {
      margin-inline-start: 1.5rem;
      margin-bottom: 2.5rem;
    }

    .experience-item:last-child {
      margin-bottom: 0;
    }

    .experience-item time {
      display: block;
      margin-bottom: 0.5rem;
      font-size: 0.875rem;
      line-height: 1;
      color: var(--secondary);
      opacity: 0.75;
    }
    :root {
      --color: #003b4f;
      --bg: #dde8f9;
      --primary: #0b7b99;
      --secondary: #243757;
      --testimonial-border: 4px solid var(--secondary);
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --color: white;
        --bg: #20242c;
        --primary: #4dd8ff;
        --secondary: #d4e4fe;
      }
    }

    html[data-theme="dark"] {
      --color: white;
      --bg: #20242c;
      --primary: #4dd8ff;
      --secondary: #d4e4fe;
    }

    html[data-theme="light"] {
      --color: #003b4f;
      --bg: #dde8f9;
      --primary: #0b7b99;
      --secondary: #243757;
    }

    html {
      scroll-behavior: smooth;
    }

    @media screen and (max-width: 380px) {
      html {
        font-size: 12px;
      }
    }

    *,
    *::after,
    *::before {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family:
        system-ui,
        -apple-system,
        BlinkMacSystemFont,
        "Segoe UI",
        Roboto,
        Oxygen,
        Ubuntu,
        Cantarell,
        "Open Sans",
        "Helvetica Neue",
        sans-serif;
      background-color: var(--bg);
      color: var(--color);
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
    }

    main {
      margin: 0;
      padding: 1rem;
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      max-width: 768px;
      gap: 2rem;
      padding-top: 4rem;
    }

    .header {
      width: 100%;
      display: flex;
      flex-direction: column;
    }

    .footer {
      width: 100%;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 2rem;
      font-weight: 500;
    }
    .section {
      width: 100%;
      display: flex;
      flex-direction: column;
      padding: 1rem;
      gap: 1rem;
    }

    .section-title {
      width: 100%;
      font-size: 2em;
      color: var(--color);
    }

    .profile-container {
      display: flex;
      align-items: center;
      justify-content: space-evenly;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .profile {
      width: clamp(12.5rem, 40%, 22.5rem);
      border-radius: 50%;
      border: 2px solid var(--primary);
    }

    .profile-caption {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
      justify-content: center;
    }

    .profile-name {
      font-size: 3em;
      color: var(--primary);
    }

    .profile-position {
      font-size: 2em;
    }

    .profile-bio {
      color: var(--secondary);
      max-width: 21rem;
      text-wrap: balance;
      font-weight: 300;
    }

    .profile-bio span {
      color: var(--primary);
      font-weight: 600;
    }

    .tech-list {
      display: grid;
      gap: 1rem 0.5rem;
      list-style: none;
      align-items: center;
      justify-items: center;
      justify-content: center;
      grid-template-columns: repeat(auto-fit, minmax(4rem, 1fr));
    }

    .nav {
      margin-top: 1rem;
      display: flex;
      gap: 1rem;
      flex-wrap: wrap;
    }

    a {
      color: var(--secondary);
      display: inline-flex;
      align-items: center;
      font-weight: 600;
    }

    a.btn {
      background-color: var(--primary);
      color: var(--bg);
      padding: 0.5rem 1rem;
      border-radius: 0.25rem;
      font-weight: 600;
      text-decoration: none;
      cursor: pointer;
      transition: scale 0.2s ease-in-out;
    }

    a.btn:hover {
      scale: 1.05;
    }
  </style>
</Layout>
