---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <main>
    <h1>404</h1>
    <p>Page not found</p>
    <a href="/">Go back home</a>
  </main>
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    color: var(--secondary);
  }

  h1 {
    font-size: 10rem;
    margin: 0;
    color: var(--color);
  }

  p {
    font-size: 2rem;
    margin: 0;
  }

  a {
    font-size: 2rem;
    margin: 0;
    color: var(--primary);
  }
</style>
