---
import ExperienceCard from "./ExperienceCard.astro";
import { experiences } from "../data/experiences";
---

<section id="experiences" class="section">
  <header class="header">
    <h2>
      <span class="orange">Professional</span>
      <span>Background</span>
    </h2>
  </header>
  <ul>
    {
      experiences.map((exp) => (
        <li>
          <ExperienceCard {...exp} />
        </li>
      ))
    }
  </ul>
</section>

<style>
  section {
    gap: 100px;
    position: relative;
  }

  h2 {
    display: flex;
    flex-direction: column;
  }

  ul {
    padding-left: 20px;
    display: flex;
    flex-direction: column;
    gap: 50px;
  }

  li {
    width: 100%;
    height: 85px;
    overflow: hidden;
    text-align: left;
  }

  @media screen and (max-width: 380px) {
    section {
      padding-left: 8px;
      padding-right: 8px;
      padding-top: 25px;
      gap: 50px;
    }

    h2 {
      font-size: 32px;
    }

    ul {
      gap: 25px;
    }
  }
</style>
