---
const { position, project, achievements } = Astro.props;
---

<article>
  <header>
    <h3>
      {position} @ {project}
    </h3>
  </header>
  <div>
    <p>{achievements}</p>
    <span>See more &gt;&gt;&gt;</span>
  </div>
</article>

<style>
  article {
    position: relative;
    width: 350px;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  article::before {
    position: absolute;
    content: "";
    border-radius: 50%;
    height: 10px;
    width: 10px;
    background-color: #f27121;
    top: 33px;
    left: 8px;
  }

  article::after {
    position: absolute;
    content: "";
    height: 100%;
    width: 25px;
    right: -28px;
    background-color: #f27121;
  }

  article > * {
    padding-left: 45px;
  }

  header {
    background-color: white;
    margin-bottom: 2px;
  }

  h3 {
    color: #f27121;
    font-size: 16px;
    font-weight: 700;
  }

  div {
    background-color: white;
    font-size: 12px;
    font-weight: 600;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  p {
    color: #717171;
    line-height: 16px;
    height: 32px;
    overflow: hidden;
  }

  span {
    color: #f27121;
  }

  @media screen and (max-width: 380px) {
    article::after,
    article::before {
      display: none;
    }

    article {
      width: 100%;
    }

    article > * {
      padding-left: 8px;
    }
  }
</style>
