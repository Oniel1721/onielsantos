---
import AWSIcon from "../icons/AWSIcon.astro";
import CSSIcon from "../icons/CSSIcon.astro";
import DockerIcon from "../icons/DockerIcon.astro";
import GraphQLIcon from "../icons/GraphQLIcon.astro";
import HTMLIcon from "../icons/HTMLIcon.astro";
import JavaScriptIcon from "../icons/JavaScriptIcon.astro";
import NestJsIcon from "../icons/NestJsIcon.astro";
import NextJsIcon from "../icons/NextJsIcon.astro";
import NodeJsIcon from "../icons/NodeJsIcon.astro";
import PostgreSQLIcon from "../icons/PostgreSQLIcon.astro";
import ReactIcon from "../icons/ReactIcon.astro";
import ReduxIcon from "../icons/ReduxIcon.astro";
import TypeScriptIcon from "../icons/TypeScriptIcon.astro";

const skills = [
  {
    Icon: JavaScriptIcon,
    name: "JavaScript",
  },
  {
    Icon: AWSIcon,
    name: "Amazon Web Services",
  },
  {
    Icon: PostgreSQLIcon,
    name: "PostgreSQL",
  },
  {
    Icon: NestJsIcon,
    name: "NestJS",
  },
  {
    Icon: HTMLIcon,
    name: "HTML",
  },
  {
    Icon: CSSIcon,
    name: "CSS",
  },
  {
    Icon: DockerIcon,
    name: "Docker",
  },
  {
    Icon: NodeJsIcon,
    name: "NodeJS",
  },
  {
    Icon: ReduxIcon,
    name: "Redux",
  },
  {
    Icon: ReactIcon,
    name: "React",
  },
  {
    Icon: GraphQLIcon,
    name: "GraphQL",
  },
  {
    Icon: TypeScriptIcon,
    name: "TypeScript",
  },
  {
    Icon: NextJsIcon,
    name: "NextJS",
  },
];
---

<section>
  <header>
    <h2>Skills</h2>
  </header>
  <ul>
    {
      skills.map((skill) => (
        <li>
          <figure>
            <div>
              <skill.Icon />
            </div>
            <figcaption>{skill.name}</figcaption>
          </figure>
        </li>
      ))
    }
  </ul>
</section>

<style>
  section {
    color: white;
    text-align: center;
    padding-top: 64px;
    padding-bottom: 32px;
  }

  header {
    margin-bottom: 32px;
    font-size: 28px;
    font-weight: 900;
    width: 100%;
    position: relative;
  }

  header::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 75vw;
    height: 4px;
    background-color: rgba(255, 255, 255, 0.3);
  }

  ul {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    list-style: none;
    gap: 24px;
    padding: 0 16px;
  }

  li {
    display: flex;
    width: 100px;
    aspect-ratio: 1;
    justify-content: center;
  }

  figure {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
    font-size: 14px;
    font-weight: 500;
    line-height: 87%;
  }

  div {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-grow: 1;
  }

  figcaption {
    margin-top: 8px;
  }
</style>
