---
import { skills } from "../data/skills.ts";
---

<section class="section">
  <header class="header center">
    <h2>Skills</h2>
  </header>
  <ul>
    {
      skills.map((skill) => (
        <li>
          <figure>
            <div>
              <img src={skill.icon} alt={`${skill.name} Icon`} />
            </div>
            <figcaption>{skill.name}</figcaption>
          </figure>
        </li>
      ))
    }
  </ul>
</section>

<style>
  ul {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    list-style: none;
    gap: 24px;
    padding: 0 16px;
  }

  li {
    display: flex;
    width: 100px;
    aspect-ratio: 1;
    justify-content: center;
  }

  figure {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-evenly;
    font-size: 14px;
    font-weight: 500;
    line-height: 87%;
  }

  div {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-grow: 1;
  }

  div img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  figcaption {
    margin-top: 8px;
  }
</style>
