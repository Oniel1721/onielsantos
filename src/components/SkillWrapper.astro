---
const { title } = Astro.props as { title: string };
---

<li class="skill" title={title}>
  <slot />
  {title}
</li>

<style>
  .skill {
    display: flex;
    flex-direction: column;
    text-align: center;
    justify-content: center;
    align-items: center;
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--color);
  }
</style>
