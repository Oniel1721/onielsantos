---
const { chip, time, title, company } = Astro.props as {
  title: string;
  chip?: string;
  time: string;
  company?: string;
};
---

<li class="experience-item">
  <div class="experience-point"></div>
  <h3 class="experience-title">
    {title}
    {chip ? <span>{chip}</span> : null}
  </h3>
  <span></span>
  <time>{company ? `at ${company} ` : ""} {time}</time>
  <p class="experience-body">
    <slot />
  </p>
</li>

<style is:global>
  .experience-title {
    font-size: 1.125rem;
    line-height: 1.75rem;
    color: var(--color);
    font-weight: 600;
    margin-bottom: 0.25rem;
    display: flex;
    align-items: center;
  }
  .experience-title span {
    font-size: 0.75rem;
    color: var(--bg);
    font-weight: 500;
    margin-inline-start: 0.5rem;
    background-color: var(--secondary);
    padding: 0 0.5rem;
    border-radius: 0.5rem;
    opacity: 0.75;
  }
  .experience-point {
    position: absolute;
    width: 0.75rem;
    height: 0.75rem;
    border-width: 1px;
    background-color: var(--secondary);
    border-radius: 50%;
    inset-inline-start: -0.375rem;
    margin-top: 0.375rem;
    animation-name: color;
    animation-timeline: view();
    animation-range: 25% 50%;
    animation-fill-mode: both;
  }

  @keyframes color {
    from {
      background-color: var(--secondary);
    }
    to {
      background-color: var(--primary);
    }
  }

  .experience-item {
    margin-inline-start: 1.5rem;
    margin-bottom: 2.5rem;
  }

  .experience-item:last-child {
    margin-bottom: 0;
  }

  .experience-item time {
    display: block;
    margin-bottom: 0.5rem;
    font-size: 0.875rem;
    line-height: 1;
    color: var(--secondary);
    opacity: 0.75;
  }
</style>
