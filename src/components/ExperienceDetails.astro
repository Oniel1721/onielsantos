---
import CloseIcon from "../icons/CloseIcon.astro";
const { position, project, achievements, responsabilities, skills } =
  Astro.props;
---

<aside>
  <div class="button">
    <CloseIcon />
  </div>
  <header>
    <h3>{position}</h3>
    <span>@ {project}</span>
  </header>
  <div>
    <h4>Achievements:</h4>
    <p>{achievements}</p>
    <h4>Responsabilities:</h4>
    <p>{responsabilities}</p>
    <h4>Skills Uilized:</h4>
    <p>{skills}</p>
  </div>
</aside>

<style>
  aside {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: #070032;
    display: flex;
    flex-direction: column;
    z-index: 1;
    transition: left 0.3s ease-in-out;
    overflow-y: auto;
    padding-bottom: 12px;
  }

  aside:not(.show) {
    left: 100%;
  }

  .button {
    width: 45px;
    height: 45px;
    margin-left: auto;
    margin-right: 16px;
    margin-top: 16px;
  }

  header {
    position: relative;
    background-color: white;
    padding: 2px 12px;
    width: min-content;
  }

  header::after {
    content: "";
    height: 100%;
    width: 25px;
    background-color: #f27121;
    position: absolute;
    left: 100%;
    top: 0;
  }

  h3 {
    color: #f27121;
    font-size: 28px;
    font-weight: 700;
    line-height: 131%;
    width: max-content;
  }

  span {
    color: #6f6f6f;
    font-size: 20px;
    font-weight: 700;
    line-height: 131%;
  }

  div:not(.button) {
    padding-left: 12px;
    padding-right: 52px;
  }

  h4 {
    margin-top: 16px;
    margin-bottom: 4px;
    color: #f27121;
    font-size: 16px;
    font-weight: 700;
  }

  p {
    color: white;
    font-size: 12px;
    font-weight: 600;
  }

  @media (max-width: 380px) {
    .button {
      margin-right: 0;
      margin-top: 8px;
      margin-bottom: 8px;
    }

    div:not(.button) {
      padding-right: 12px;
    }
  }
</style>
