---
const { position, project, achievements, responsabilities, skills } =
  Astro.props;
---

<main>
  <a href="/#experiences" class="button">
    <img src="/icons/close-icon.svg" alt="Close Icon" />
  </a>
  <header>
    <h1>{position}</h1>
    <span>@ {project}</span>
  </header>
  <article>
    <h2>Achievements:</h2>
    <p class="achievements">{achievements}</p>
    <h2>Responsabilities:</h2>
    <p>{responsabilities}</p>
    <h2>Skills Uilized:</h2>
    <p>{skills}</p>
  </article>
</main>

<style>
  main {
    width: 100%;
    height: 100vh;
    background: linear-gradient(180deg, #2c2174 0.34%, #070032 42.96%);
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .button {
    width: 45px;
    height: 45px;
    margin-left: auto;
    margin-right: 16px;
    margin-top: 16px;
  }

  header {
    position: relative;
    background-color: white;
    padding: 2px 12px;
    width: min-content;
  }

  header::before {
    content: "";
    height: 40px;
    width: 100vw;
    background-color: rgba(255, 255, 255, 0.1);
    position: absolute;
    left: 100%;
    top: 0;
  }

  header::after {
    content: "";
    height: 100%;
    width: 25px;
    background-color: #f27121;
    position: absolute;
    left: 100%;
    top: 0;
  }

  h1 {
    color: #f27121;
    font-size: 24px;
    font-weight: 700;
    line-height: 131%;
    width: max-content;
  }

  span {
    color: #6f6f6f;
    font-size: 20px;
    font-weight: 700;
    line-height: 131%;
  }

  article {
    position: relative;
    padding-left: 12px;
    padding-right: 52px;
  }

  article::after {
    content: "";
    height: 40px;
    width: 40%;
    background-color: rgba(255, 255, 255, 0.1);
    position: absolute;
    left: 0;
    top: calc(100% + 40px);
  }

  h2 {
    margin-top: 16px;
    margin-bottom: 4px;
    color: #f27121;
    font-size: 16px;
    font-weight: 700;
  }

  p {
    color: white;
    font-size: 12px;
    font-weight: 600;
  }

  @media (max-width: 380px) {
    .button {
      margin-right: 0;
      margin-top: 8px;
      margin-bottom: 8px;
    }

    article {
      padding-right: 12px;
    }
  }
</style>
