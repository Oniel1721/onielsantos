---
const { title } = Astro.props as { title: string };
---

<section class="section">
  {title && <h2 class="section-title color-title">{title}</h2>}
  <slot />
</section>

<style is:global>
  .section {
    width: 100%;
    display: flex;
    flex-direction: column;
    padding: 1rem;
    gap: 1rem;
  }

  .section-title {
    width: 100%;
    font-size: 2em;
    color: var(--color);
  }
</style>
