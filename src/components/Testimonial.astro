---
import { testimonials } from "../data/testimonials";
---

<section>
  <header>
    <h2>Testimonial</h2>
  </header>
  <div>
    {
      testimonials.map(({ comment, name, ocupation }) => (
        <article>
          <q>{comment}</q>
          <footer>
            <cite>{name}</cite>
            <span>- {ocupation}</span>
          </footer>
        </article>
      ))
    }
  </div>
</section>

<style>
  section {
    color: white;
    text-align: center;
    padding-top: 64px;
    padding-bottom: 64px;
  }

  header {
    margin-bottom: 48px;
    font-size: 28px;
    font-weight: 900;
    width: 100%;
    position: relative;
  }

  header::after {
    content: "";
    position: absolute;
    bottom: -4px;
    right: 0;
    width: 88vw;
    height: 4px;
    background-color: #f27121;
  }

  div {
    display: flex;
    flex-direction: column;
    padding-left: 60px;
    gap: 36px;
  }

  article {
    position: relative;
    background-color: rgba(255, 255, 255, 0.25);
    padding: 12px 28px 12px 48px;
    text-align: left;
    font-size: 12px;
    font-weight: 500;
  }

  article::before {
    background-color: #f27121;
    content: "";
    position: absolute;
    top: 0;
    right: 100%;
    width: 8px;
    height: 100%;
  }

  q {
    position: relative;
  }

  q::after {
    content: "";
  }

  q::before {
    content: "";
    position: absolute;
    top: 6px;
    left: -16px;
    width: 12px;
    height: 2px;
    background-color: white;
  }

  article footer {
    display: flex;
    flex-direction: column;
  }

  cite {
    font-weight: 600;
    color: #f27121;
  }

  span {
    font-size: 10px;
    display: flex;
    align-items: center;
    font-weight: 400;
    color: #f27121;
    font-style: italic;
  }

  @media screen and (max-width: 380px) {
    header {
      font-size: 24px;
    }

    header::after {
      width: 95vw;
    }

    div {
      padding: 0 12px;
    }

    article {
      padding: 12px 28px 12px 28px;
    }

    article::before {
      display: none;
    }

    q::before {
      top: 8px;
    }
  }
</style>
