---
import { ViewTransitions } from "astro:transitions";
---

<html data-theme="dark" lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Oniel Santos - Full-Stack Developer with +4 years of experience self-taught. Worked in the Healthcare industry and E-commerce."
    />
    <meta
      name="keywords"
      content={`Oniel Santos,Oniel,Experienced,Healthcare,Software,Developer,Self-taught,Professional,Skills`}
    />
    <meta name="author" content="OnielSantos" />
    <meta name="og:title" content="Oniel Santos" />
    <meta
      name="og:description"
      content="Oniel Santos - Full-Stack Developer with +4 years of experience self-taught. Worked in the Healthcare industry and E-commerce."
    />
    <meta name="og:image" content="/images/profile..webp" />
    <title>Oniel Santos - Full Stack Developer</title>
    <ViewTransitions />
  </head>
  <body>
    <slot />
    <style is:global>
      :root {
        --color: #003b4f;
        --bg: #dde8f9;
        --primary: #0b7b99;
        --secondary: #243757;
        --testimonial-border: 4px solid var(--secondary);
      }

      @media (prefers-color-scheme: dark) {
        :root {
          --color: white;
          --bg: #20242c;
          --primary: #4dd8ff;
          --secondary: #d4e4fe;
        }
      }

      html[data-theme="dark"] {
        --color: white;
        --bg: #20242c;
        --primary: #4dd8ff;
        --secondary: #d4e4fe;
      }

      html[data-theme="light"] {
        --color: #003b4f;
        --bg: #dde8f9;
        --primary: #0b7b99;
        --secondary: #243757;
      }

      html {
        scroll-behavior: smooth;
      }

      @media screen and (max-width: 380px) {
        html {
          font-size: 12px;
        }
      }

      *,
      *::after,
      *::before {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family:
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          Roboto,
          Oxygen,
          Ubuntu,
          Cantarell,
          "Open Sans",
          "Helvetica Neue",
          sans-serif;
        background-color: var(--bg);
        color: var(--color);
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
      }
    </style>
  </body>
</html>
